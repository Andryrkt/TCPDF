{% extends "base.html.twig" %}

{% import "badm/macroForm.html.twig" as form %}

{% block content %}
    <div class="container my-5">

        <h2>Nouvelle BADM</h2>

        <form action="#" method="post">

            <div class="row">    
              {{ form.inputReadonly('date', 'Date', '24/03/2024', {endpoint: '2', class: 'offset-10'}) }}
            </div>

            <div class="row">
                {{ form.sousTitre('Caractéristiques du matériel')}}
            </div>
            <div class="row">
                {{form.inputReadonly('designation', 'Désignation ', 'Exemple Designation',{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('idMateriel', 'ID matériel ', 'Exemple ID matériel',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('numSerie', 'N° Série ', 'Exemple N° Série',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('numParc', 'N° Parc  ', 'Exemple N° Parc ',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            </div>
            <div class="row">
                {{form.inputReadonly('groupe', 'Groupe ', 'Exemple Groupe',{endpoint: '12', class: 'col-lg-3 col-md-6'})}}
                {{form.inputReadonly('constructeur', 'Constructeur', 'Exemple Constructeur',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('modele', 'Modèle ', 'Exemple Modèle ',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
                {{form.inputReadonly('anneeModele', 'Année du modèle', 'Exemple Année du modèle ',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            </div>
            <div class="row">
                {{form.inputReadonly('dateAchat', 'Date d’achat ', 'Exemple Date d’achat ',{endpoint: '12', class: 'col-lg-3 col-md-6'} )}}
            </div>

            <div class="row">
                {{ form.sousTitre('Service émetteur')}}
            </div>
            <div class="row">
                {{form.inputReadonly('agenceEmetteur', 'Agence', 'Exemple Agence',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.inputReadonly('serviceEmetteur', 'Service', 'Exemple Service',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.inputReadonly('casierEmetteur', 'Casier', 'Exemple Casier',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            </div>

            <div class="row">
                {{ form.sousTitre('Service destinataire')}}
            </div>
            <div class="row">
                {{form.select('agenceDestinataire', 'Agence', 'Exemple Agence',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.select('serviceDestinataire', 'Service', 'Exemple Service',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.inputReadonly('casierDestinataire', 'Casier', 'Exemple Casier',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
            </div>
            <div class="row">
                {{form.inputText('motifDestinataire', 'Motif Arrêt Materiel', 'Exemple Motif de service déstinataire ',{required: 'required', endpoint: '12', maxlength: '100' } )}}
            </div>


            <div class="row">
                {{ form.sousTitre('Entrée en parc')}}
            </div>
            <div class="row">
                {{form.inputReadonly('etatAchat', 'Etat à l’achat:', 'Exemple Etat à l’achat:',{required: 'required', endpoint: '12', class: ' col-md-6'})}}
                {{form.inputDate('dateMiseLocation', 'Date de mise en location', 'Exemple Date de mise en location',{endpoint: '12', class: ' col-md-6'})}}    
            </div>

            <div class="row">
                {{ form.sousTitre('Valeur (MGA)')}}
            </div>
            <div class="row">
                {{form.inputReadonly('coutAcquisition', 'Coût d’acquisition', 'Exemple Coût d’acquisition',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.inputReadonly('amort', 'Amort', 'Exemple Amort',{endpoint: '12', class: 'col-lg-4 col-md-6'})}} 
                {{form.inputReadonly('vnc', 'VNC', 'Exemple VNC',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}   
            </div>

            <div class="row">
                {{ form.sousTitre('Cession d’actif')}}
            </div>
            <div class="row">
                {{form.inputText('nomClient', 'Nom client', 'Exemple Nom client',{endpoint: '12', class: 'col-lg-4 col-md-6'})}}
                {{form.select('modalitePaiement', 'Modalité de paiement', {Traite:'Traite', Cheque:'Chèque', Virement:'Virement'},{endpoint: '12', class: 'col-lg-4 col-md-6'})}} 
                {{form.inputNumber('prixHt', 'Prix HT', 'Exemple Prix HT',{ step:'0.01',  endpoint: '12', class: 'col-lg-4 col-md-6'})}}   
            </div>


            <div class="row">
                {{ form.sousTitre('Mise au rebut')}}
            </div>
            <div class="row">
                {{form.inputText('motifMiseRebut', 'Motif de mise au rebut', 'Exemple Motif de mise au rebut',{endpoint: '12', maxlength: '100'})}}     
            </div>


            <div class="row">
                {{ form.sousTitre('Etat machine')}}
            </div>
            <div class="row">
                {{form.inputReadonly('heuresMachine', 'Heures machine', 'Exemple Heures machine',{endpoint: '12', class: 'col-md-6'})}}
                {{form.inputReadonly('kilometrage', 'Kilométrage', 'Exemple Kilométrage',{endpoint: '12', class: ' col-md-6'})}}    
            </div>

            <div class="row mt-5">
                {{form.button('submit', 'Envoyer', 'enregistrer', 'primary')}}
                {{form.button('annuler', 'Annuler', 'reset', 'secondary')}}
            </div>
        </form>
    </div>    
    {% endblock content %}